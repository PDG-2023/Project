{
	"arrowParens": "avoid",
	"htmlWhitespaceSensitivity": "css",
	"overrides": [
		{
			"files": "*.html",
			"options": {
				"parser": "html"
			}
		},
		{
			"files": "*.yml",
			"options": {
				"parser": "yaml",
				"tabWidth": 2
			}
		}
	],
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "none",
	"useTabs": true,
  	"endOfLine": "auto"
}
